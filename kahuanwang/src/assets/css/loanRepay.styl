// 借还款记录
.loanRepayRecord
  .record-list
    margin-top: 15px
    .record-item
      display: flex
      justify-content: space-between
      align-items: center
      width: 100%
      height: 66px
      padding: 0 15px
      border-bottom: 1px solid #e5e5e5
      background-color: #fff
      .desc
        display: flex
        height: 100%
        padding: 10px 0
        flex-direction: column
        justify-content: space-around
      .name
        color: #333
        font-size: 15px
      .time
        color: #999
        font-size: 11px
      .amount
        color: #333
        font-size: 12px

  .empty-content
    margin-top: 185px
    text-align: center
    color: #999
    font-size: 15px
    .txt
      margin-top: 20px

// 借还款详情
.loanRepayDesc
  padding: 17px 15px 0 15px
  .banner
    display: flex
    flex-direction: column
    justify-content: space-around
    align-items: center
    width: 100%
    height: 166px
    padding: 10px 0
    color: #fff
    border-radius: 5px
    background-image: url("../../assets/img/repay-bg.png")
    background-size: 100% 166px
    .title
      font-size: 17px
    .amount
      font-size: 48px
      .icon-money
        display: inline-block
        width: 19px
        height: 25px
        background-image: url('../../assets/img/icon_money.png')
        background-size: 19px 25px
      .decimals
        font-size: 31px
    .time
      font-size: 13px
    .overdue-time
      color: #f00
      font-size: 13px

  .desc
    width: 100%
    margin-top: 15px
    padding: 29px 0 23px 29px
    font-size: 14px
    border-radius: 5px
    background-color: #fff
    .title
      margin-bottom: 14px
      font-size: 17px
      font-weight: 600
    .item
      display: flex
      line-height: 26px
      .name
        flex-basis: 118px
        width: 118px
        color: #666
      .value
        color: #333
        .calc-rate
          display: inline-block
          width: 14px
          height: 16px
          margin-left: 4px
          vertical-align: -3px
          background-image: url("../../assets/img/icon_rate.png")
          background-size: 100% 100%

  .loan-btn
    margin-top: 23px

  .hint
    margin-top: 103px
    padding: 0 15px
    line-height: 20px
    text-align: left
    color: #999
    font-size: 11px
