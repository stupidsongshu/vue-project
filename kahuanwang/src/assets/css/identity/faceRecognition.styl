.faceRecognition
  width: 100%
  height: 402px
  margin: 12px 0 48px 0
  padding-top: 42px
  text-align: center
  background-color: #fff
  .title
    color: #333
    font-size: 14px
  .shot-frame
    position: relative
    width: 149px
    height: 149px
    margin: 59px auto 53px auto
    background: url("../../../assets/img/shot_frame.png")
    background-size: 149px 149px
    .shot
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%,-50%)
      width: 95px
      height: 104px
      background: url("../../../assets/img/shot.png")
      background-size: 95px 104px
    .shot-fail
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%,-50%)
      width: 95px
      height: 104px
      background: url("../../../assets/img/shot_fail.png")
      background-size: 95px 104px
    .shot-success
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%,-50%)
      width: 128px
      height: 128px
      img
        width: 100%
        height: 100%
  .shot-video
    position: relative
    width: 149px
    height: 149px
    margin: 59px auto 53px auto
    background: url("../../../assets/img/shot_video.png")
    background-size: 149px 149px
  .shot-video-success
    position: relative
    width: 149px
    height: 149px
    margin: 59px auto 53px auto
    img
      width: 100%
      height: 100%
  p
    line-height: 24px
    color: #999
    font-size: 14px
  .conditions
    display: flex
    padding: 0 15px
    color: #666
    font-size: 11px
    text-align: left
    div
      flex: 1
      margin-top: 10px
