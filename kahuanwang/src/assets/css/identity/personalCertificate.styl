.input-item
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  //height: 53px
  height: 44px
  padding: 0 15px
  font-size: 14px
  border-bottom: 1px solid #d9d9d9
  background-color: #fff
  .input-item-l
    display: flex
    align-items: center
    width: calc(100% - 20px)
    height: 100%
    color: #333
    .name
      width: 84px
    .required
      position: relative
      &:after
        content: '*'
        position: absolute
        top: -2px
        right: -6px
        font-size: 12px
        color: #f00
    .input
      display: inline-block
      width: calc(100% - 84px) !important
      height: 100%
      outline: none
      border: none
  .input-item-r
    width: 20px
    text-align: right
    color: #999
    font-size: 24px
    .icon-shoot-success
      display: inline-block
      width: 21px
      height: 15px
      background: url("../../../assets/img/icon_success.png") no-repeat
      background-size: 21px 15px

.input-item-hint
  display: flex
  justify-content: space-between
  align-items: center
  height: 38px
  padding: 0 15px
  color: #999
  font-size: 11px
  .caution-wrapper
    display: flex
    align-items: center
    .icon-caution
      display: inline-block
      width: 12px
      height: 12px
      margin-right: 4px
      background: url("../../../assets/img/icon_caution.png") no-repeat
      background-size: 12px 12px
  .arrow-wrapper
    display: flex
    align-items: center
    .arrow-right
      margin-left: 4px
      font-size: 14px
