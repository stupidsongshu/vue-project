.pc-nav-header
  display: flex
  width: 100%
  height: 42px
  line-height: 42px
  color: #999
  font-size: 13px
  background-color: #fff
  li
    flex: 1
    height: 100%
    text-align: center
    span
      display: inline-block
      height: 100%
      padding: 0 2px
      &.curProgress
        color: main-color
      &.active
        border-bottom: 1px solid main-color
