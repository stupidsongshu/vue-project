.survey
	position: absolute
	width: 100%
	height: 100%
	.page
		background: #B4FAD8
		height: 100%
		// overflow: hidden
	.survey-home
		.head_bg
			width: 100%
			height: 300px
			background:  url(../../assets/img/head.png) no-repeat
			background-size: 100% 100%
		.desc
			text-align: center
			font-size: 14px
			color: rgb(32, 170, 118)
			margin-top: 20px
			line-height: 26px
		.startEdit
			position: relative
			left: 25%
			background: #fff
			display: block
			width: 50%
			text-align: center
			font-size: 22px
			padding: 8px 0
			border-radius: 10px
			margin-top: 20px
			color: rgb(1, 195, 125)

	.page1
		background:#23DE8D
		.head_bg
			position: relative
			top: 0
			left: 0
			z-index: 2
			width: 100%
			height: 160px
			background:  url(../../assets/img/bg.png) no-repeat
			background-size: 100% 100%
		.quetions-wrap
			position: relative
			top: -32px
			z-index: 1
			width: 93%
			margin: 0 auto
			height: auto
			background: #fff
			padding: 0
			padding-bottom: 20px
			overflow: hidden
			&>.quetion
				padding-top: 40px
				margin:0 auto
				height: 80%
				width: 86%
				font-size: 20px
				overflow: hidden
				// &>li
				// 	border: 1px solid red
				// 	display: none
				// 	float: left
				// &>li.active
				// 	display: block

			.btns
				height: 20%
				text-align: center
				&>button
					position: relative
					top: 20%
					width: 30%
					height: 32px
					color: #fff
					border-radius: 3px
					border:0
					background:#ABABAB
				&>.prev
					margin-right: 20px
				&>.next
					margin-left: 20px
				&>.active
					background:#23DE8D

		.submit
			position: relative
			width: 93%
			margin: 0 auto
			text-align: center
			z-index: 3
			&>button
				border: 0
				background: #fff
				color: #23DE8D
				border-radius: 6px
				box-shadow: 0 0 6px 0 rgb(15, 202, 121)
				padding: 10px 44px
				font-weight: bold
				display: none

	.resultPage
		.head_bg
			width: 100%
			height: 128px
			background:  url(../../assets/img/result.png) no-repeat
			background-size: 100% 100%
		.result
			background: url(../../assets/img/success.png) no-repeat
		p
			color: #009A62
			text-align: center
			font-size: 24px
		.IKnow
			color: #fff
			width: 60%
			margin: 80px auto 0
			display: block
			border-radius: 6px
			height: 56px
			border:none
			background: #01C37D
			font-size: 26px
	.error
		.result
			background: url(../../assets/img/fail.png) no-repeat
	.resultPage .result,.error .result
		width: 40%
		margin: 120px auto 0
		height: 40px
		background-size: 100% 100%