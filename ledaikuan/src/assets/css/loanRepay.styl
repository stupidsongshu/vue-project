@import './base.styl'

// 借还款记录
.loanRepayRecord
  .record-list
    margin-top: 15px
    .record-item
      display: flex
      justify-content: space-between
      align-items: center
      width: 100%
      height: 66px
      padding: 0 15px
      border-bottom: 1px solid #e5e5e5
      background-color: #fff
      .desc
        display: flex
        height: 100%
        padding: 10px 0
        flex-direction: column
        justify-content: space-around
      .name
        color: #333
        font-size: 15px
      .time
        color: #999
        font-size: 11px
      .amount
        color: #333
        font-size: 12px

  .empty-content
    margin-top: 185px
    text-align: center
    color: #999
    font-size: 15px
    .txt
      margin-top: 20px

// 提前还款
.loanRepayDesc
  .banner
    display: flex
    flex-direction: column
    justify-content: space-around
    align-items: center
    width: 100%
    height: 166px
    padding: 10px 0
    color: #fff
    background-image: url("../../assets/img/icon_banner.png")
    background-size: 100% 166px
    .title
      font-size: 17px
    .amount
      font-size: 48px
      .icon-money
        display: inline-block
        width: 19px
        height: 25px
        background-image: url('../../assets/img/icon_money_white.png')
        background-size: 19px 25px
      .decimals
        font-size: 31px
    .time
      font-size: 13px
    .overdue-time
      color: #f00
      font-size: 13px

  .two-col
    width: 100%
    padding: 13px 0
    background-color: #fff
    li
      float: left
      width: 50%
      text-align: center
      &:first-child
        border-right: 1px solid #999
      .num
        color: main-color
        font-size: 17px
      .txt
        color: #666
        font-size: 14px
  .calc-rate
    display: inline-block
    width: 15px
    height: 15px
    margin-left: 4px
    vertical-align: -3px
    background-image: url("../../assets/img/icon_calc_circle.png")
    background-size: 15px 15px

  .desc
    width: 100%
    margin-top: 10px
    font-size: 14px
    background-color: #fff
    .item
      display: flex
      align-items: center
      height: 52px
      padding: 0 20px
      border-bottom: 1px solid #d9d9d9
      .name
        flex-basis: 118px
        width: 118px
        color: #666
      .value
        color: #333
      .right-btn
        position: absolute
        right: 20px
        color: main-color
